{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "Mac LLM Workstation Package Manifest (Mac Ultra/Pro with 64GB+ RAM)",

  "taps": [
    "hashicorp/tap",
    "jandedobbeleer/oh-my-posh",
    "microsoft/mssql-release",
    "azure/azd",
    "gitguardian/tap"
  ],

  "casks": {
    "browsers": [
      "firefox",
      "google-chrome",
      "microsoft-edge"
    ],
    "development": [
      "visual-studio-code",
      "github",
      "gitkraken",
      "gitkraken-cli",
      "docker-desktop",
      "beyond-compare",
      "warp"
    ],
    "ai_llm": [
      "ollama",
      "lm-studio",
      "jan",
      "chatgpt",
      "claude",
      "claude-code"
    ],
    "microsoft_azure": [
      "powershell",
      "microsoft-azure-storage-explorer"
    ],
    "security": [
      "1password",
      "1password-cli"
    ],
    "fonts": [
      "font-fira-code-nerd-font",
      "font-meslo-lg-nerd-font",
      "font-jetbrains-mono-nerd-font"
    ]
  },

  "formulae": {
    "core": [
      "git",
      "gh",
      "wget",
      "tree",
      "watch",
      "htop",
      "ncurses"
    ],
    "languages": [
      "python@3.13",
      "node",
      "go",
      "dotnet",
      "dotnet-sdk",
      "openjdk@21"
    ],
    "version_managers": [
      "pyenv",
      "nvm"
    ],
    "python": [
      "pipx"
    ],
    "iac": [
      "terraform",
      "terraform-docs",
      "packer"
    ],
    "kubernetes": [
      "kubectl",
      "kubelogin"
    ],
    "azure": [
      "azure-cli",
      "azcopy",
      "azure/azd/azd"
    ],
    "database": [
      "postgresql@16",
      "microsoft/mssql-release/msodbcsql18",
      "microsoft/mssql-release/mssql-tools18"
    ],
    "network": [
      "tcping",
      "unbound"
    ],
    "shell": [
      "oh-my-posh"
    ],
    "utilities": [
      "graphviz",
      "xz",
      "zstd"
    ],
    "security": [
      "ggshield"
    ]
  },

  "edge_extensions": {
    "odfafepnkmbhccpbejgmiehpchacaeak": "uBlock Origin",
    "hokifickgkhplphjiodbggjmoafhignh": "React Developer Tools",
    "fmkadmapgofadopljbjfkapdkoienihi": "JSON Formatter",
    "nhdogjmejiglipccpnnnanhbledajbpd": "Vue.js devtools",
    "lmhkpmbekcpmknklioeibfkpmmfibljd": "Redux DevTools",
    "gppongmhjkpfnbhagpmjfkondtafpam": "GitHub Copilot"
  },

  "vscode_extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
    "ms-azuretools.vscode-docker",
    "hashicorp.terraform",
    "github.copilot",
    "github.copilot-chat",
    "continue.continue",
    "ms-dotnettools.csharp",
    "golang.go",
    "esbenp.prettier-vscode",
    "eamodio.gitlens"
  ],

  "zsh_plugins": [
    "zsh-users/zsh-autosuggestions",
    "zsh-users/zsh-syntax-highlighting",
    "zsh-users/zsh-completions"
  ],

  "pipx_packages": [
    "poetry",
    "httpie",
    "litellm"
  ],

  "ollama_models": {
    "default": [
      "llama3.2:3b",
      "qwen2.5-coder:32b"
    ],
    "coding": [
      "qwen2.5-coder:32b",
      "deepseek-coder-v2:16b",
      "codellama:34b"
    ],
    "general": [
      "llama3.3:70b-instruct-q4_K_M",
      "qwen2.5:32b",
      "mixtral:8x7b"
    ],
    "fast": [
      "llama3.2:3b",
      "qwen2.5-coder:7b"
    ],
    "specialized": [
      "nomic-embed-text",
      "llava:34b"
    ]
  }
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "Ubuntu Headless Server Package Manifest (CLI Only)",

  "apt": {
    "prerequisites": [
      "curl",
      "wget",
      "apt-transport-https",
      "ca-certificates",
      "gnupg",
      "lsb-release",
      "software-properties-common",
      "unzip"
    ],
    "core": [
      "git",
      "build-essential",
      "openssh-server"
    ],
    "utilities": [
      "jq",
      "htop",
      "tree",
      "ripgrep",
      "tmux"
    ],
    "networking": [
      "dnsutils",
      "whois",
      "traceroute",
      "mtr-tiny",
      "nmap",
      "netcat-openbsd",
      "net-tools"
    ],
    "python": [
      "python3",
      "python3-pip",
      "python3-venv"
    ],
    "database": [
      "postgresql-client"
    ],
    "shell": [
      "zsh"
    ]
  },

  "third_party": {
    "languages": ["nodejs", "go", "dotnet"],
    "cloud": ["azure-cli", "aws-cli", "gcloud-cli", "github-cli"],
    "devops": ["docker", "terraform", "kubectl", "helm", "k9s"],
    "security": ["ggshield"],
    "shell": ["oh-my-zsh", "nerd-fonts"]
  },

  "npm_global": [
    "@anthropic-ai/claude-code"
  ],

  "zsh_plugins": [
    "zsh-users/zsh-autosuggestions",
    "zsh-users/zsh-syntax-highlighting"
  ],

  "nerd_fonts": [
    "FiraCode",
    "MesloLGS"
  ]
}
